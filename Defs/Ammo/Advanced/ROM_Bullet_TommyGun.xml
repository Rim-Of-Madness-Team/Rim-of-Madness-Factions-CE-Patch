<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingCategoryDef>
      <defName>AmmoTommyGun</defName>
      <label>TommyGun</label>
      <parent>AmmoAdvanced</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberCharge</iconPath>
    </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_TommyGun</defName>
    <label>TommyGun ammo</label>
    <ammoTypes>
      <Ammo_TommyGun>Bullet_TommyGun</Ammo_TommyGun>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Name="TommyGunBase" ParentName="AmmoBase" Abstract="True">
    <description>TommyGun ammo</description>
    <statBases>
	  <Mass>0.01</Mass>
	  <Bulk>0.02</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoTommyGun</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="TommyGunBase">
    <defName>Ammo_TommyGun</defName>
    <label>TommyGun cartridge</label>
    <graphicData>
      <texPath>Things/Ammo/Rifle/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.95</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

  <ThingDef Name="BaseTommyGun" ParentName="BaseBullet" Abstract="true">
    <graphicData>
      <texPath>Things/Projectile/Pbullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <speed>55</speed>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseTommyGun">
    <defName>Bullet_TommyGun</defName>
    <label>Tommy Gun</label>
    <projectile>
      <damageAmountBase>8</damageAmountBase>
      <armorPenetration>0.4</armorPenetration>
    </projectile>
  </ThingDef>
	
</Defs>